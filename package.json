{
  "name": "calculator-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "hoistPattern": ["*"]
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "typescript-eslint": "^8.46.4"
  },
  "scripts": {
    "dev:web": "npm run dev --workspace=@calc/web",
    "build:web": "npm run build --workspace=@calc/web",
    "clean:web": "npm run clean --workspace=@calc/web",
    "build:shared": "npm run build --workspace=@calc/shared",
    "clean:shared": "npm run clean --workspace=@calc/shared",
    "dev": "npm run dev:web",
    "build": "npm run build:shared && npm run build:web",
    "clean": "npm run clean:shared && npm run clean:web",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  }
}
